{% extends 'backoffice.html.twig' %}

{% block title %}Liste des personnes{% endblock %}
{% block body %}



    <h1 class="center-block">Liste des personnes</h1>

    <table class="table">
        <thead>
            <tr class="text-light">
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Role</th>
                <th>Email</th>
                <th>Username</th>
                <th>Password</th>
                <th>Photo</th>

                <th>Numero de telephone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr class="text-light">
                <td>{{ personne.id }}</td>
                <td>{{ personne.nom }}</td>
                <td>{{ personne.prenom }}</td>
                <td>{{ personne.role }}</td>
                <td>{{ personne.email }}</td>
                <td>{{ personne.username }}</td>
                <td>*****</td>
                <td><img src ="{{ asset('uploads/images/' ~ personne.photo) }}"
                         alt =""  width="100" height="100"></td>
                <td>{{ personne.numTelephone }}</td>

                <td>
                    <a href="{{ path('personne_show', {'id': personne.id}) }}">show</a> |
                    <a href="{{ path('personne_edit', {'id': personne.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <div class="container">

    <a href="{{ path('personne_index_listp')}}"class="btn btn-primary"><i class="bi bi-printer-fill"></i>
        imprimer</a>
        </div>


{% endblock %}