{% extends 'base1.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody class="text-light">

            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/') }}{{ product.image }}" style="width: 200px;height: 200px"></td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ product.label }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ product.date }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}

    <div class="">
        <div class="col-xs2 col-sm-3">
            <h2>Comments</h2>
            <section id="comment">
                {% for comment in product.comments %}
                    <p>{{ comment.nickname }} le {{ comment.createdAt| date("d/m/y h:i") }} {{ comment.content }} </p>
                    {% endfor %}
            </section>
        </div>
        <div class="col-xs2 col-sm-3">
            <h2>Add Comment</h2>
            {{ form(commentform) }}
        </div>
    </div>

{% endblock %}
