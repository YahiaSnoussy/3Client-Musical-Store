{% extends 'base1.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>
    <div>{{ form(form) }}</div>
    <table class="table">
        <thead>
            <tr class="text-light">

                <th>Image</th>
                <th>Label</th>
                <th>Price</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr class="text-light">

                <td><img src="{{ asset('images/') }}{{ product.image }}" style="width: 120px;height: 80px"></td>
                <td>{{ product.label }}</td>
                <td>{{ product.price }}</td>


                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}

        </tbody>

    </table>
    {{ knp_pagination_render(products) }}
    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
